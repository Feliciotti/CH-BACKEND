<div>
    <h1>Registro</h1>
    <br>
    <form action="/logup" method="post" enctype="multipart/form-data" autocomplete="off">
        <div>
            <label for="name">Nombre</label>
            <input type="text" id="name" name="name" required value={{name}}>
        </div>

        <div>
            <label for="lastname">Apellido</label>
            <input type="text" id="lastname" name="lastname" required value={{lastname}}>
        </div>

        <div>
            <label for="email">e-mail</label>
            <input type="email" id="email" name="email" required value={{email}} >
        </div>

        <div>
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" required value={{password}}>
        </div>

        <div>
            <label for="passwordConfirm">Confirmar contraseña</label>
            <input type="password" id="passwordConfirm" name="passwordConfirm" required>
        </div>

        <div>
            <label for="img">Avatar</label>
            <input type="file" id="img" name="img" required>
        </div>

        <div>
            <label for="age">Edad</label>
            <input type="text" id="age" name="age" required value={{age}}>
        </div>

        <div>
            <label for="address">Dirección</label>
            <input type="text" id="address" name="address" required value={{address}}>
        </div>

        <div>
            <label for="phoneNumber">Teléfono</label>
            <input type="phone" id="phoneNumber" name="phoneNumber" required value={{phoneNumber}}>
        </div>

        <div>
            <input type="submit" value="Registrarme">
        </div>

    </form>
    <hr>
    <div>
        <button onclick="location.href = '/login'">Ya tengo una cuenta</button>
    </div>

</div>