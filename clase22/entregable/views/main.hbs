<form action="productos" method="POST">
    <div>
        <label for="name"> Producto </label>
        <input type="text" id="name" name="name" placeholder="ej: Taza">
    </div>
        <div>
        <label for="price"> Precio </label>
        <input type="text" id="price" name="price" placeholder="ej: 500">
    </div>
    <div>
        <label for="productImg">Foto URL</label>
        <input type="text" id="productImg" name="productImg" placeholder="ej: www.img.com/img">
    </div>
    <button type="submit"> Enviar </button>
</form>

<table>
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img src={{this.productImg}} alt="Foto del producto"></td>
        </tr>
        {{/each}}

    </tbody>
</table>
